{
  "name": "vsol-admin",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:clean": "pnpm kill-all-ports && pnpm dev",
    "build": "pnpm -r build",
    "start": "pnpm build && pnpm --filter @vsol-admin/api start & pnpm --filter @vsol-admin/web preview",
    "db:migrate": "pnpm --filter @vsol-admin/api db:migrate",
    "db:studio": "pnpm --filter @vsol-admin/api db:studio",
    "db:seed": "pnpm --filter @vsol-admin/api db:seed",
    "backup:db": "node ./apps/api/scripts/backup-db.js",
    "kill-port": "pnpm --filter @vsol-admin/api kill-port",
    "kill-all-ports": "pnpm --filter @vsol-admin/api kill-all-ports",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "baseline-browser-mapping": "^2.9.11",
    "tsx": "^4.6.2"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
